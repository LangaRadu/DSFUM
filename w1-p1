int ledPins[] = {8, 9, 10, 11, 12, 13};

void setup() {
  for (int i = 0; i < 6; i++) {
    pinMode(ledPins[i], OUTPUT);
  }
}

void loop() {
  for (int i = 0; i < 6; i++) {
    digitalWrite(ledPins[i], HIGH);
  }

  delay(10);

  for (int i = 0; i < 6; i++) {
    digitalWrite(ledPins[i], LOW);
  }

  delay(1000);
