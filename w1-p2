int ledPins[] = {8, 9, 10, 11, 12, 13};

void setup() {
  for (int i = 0; i < 6; i++) {
    pinMode(ledPins[i], OUTPUT);
  }
}

void loop() {
  delay(300);
  digitalWrite(ledPins[0], HIGH);

  delay(100);
  digitalWrite(ledPins[1], HIGH);

  for (int i = 2; i < 6; i++) {
    delay(200); 
    digitalWrite(ledPins[i], HIGH);
  }

  delay(1000);

  for (int i = 5; i >= 0; i--) {
    digitalWrite(ledPins[i], LOW);
    delay(200);  
  }

}
